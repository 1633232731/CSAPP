/* miniprogram/pages/index/index.wxss */
.container {
  background-color: white;
}

.top {
  text-align: center;
  width: 100%;
  /*border: 1px solid gray;*/
  background-color: #FEE140;
  background-image: linear-gradient(90deg, #FEE140 0%, #FA709A 100%);
  height: 300rpx;
}

.top .title {
  margin-top: 50rpx;
}

.top .title .title-text-1 {
  position: relative;
  font-weight: 700;
  font-size: xx-large;
  color: white
}

.top .title .title-text-2 {
  position: relative;
  font-weight: 700;
  font-size: small;
  color: white
}

.top .search {
  margin-top: 30rpx;
}

.top .search .search-input {
  text-align: center;
  width: 75%;
  display: inline-block;
  background-color: white;
  border-radius: 40rpx;
  height: 80rpx;
}

.top .search .search-image {
  width: 50rpx;
  height: 50rpx;
  position: relative;
  left: 70rpx;
  bottom: 15rpx;
}

.top .search .search-button {
  display: inline-block;
  position: relative;
  bottom: 30rpx;
  margin-left: 20rpx;
  color: white;
}

.category {
  background-color: white;
  height: 125rpx;
  width: 100%;
  margin-bottom: 30rpx;
}

.category-item {
  display: inline-block;
  text-align: right;
  margin: 40rpx 0 0 50rpx;
  color: #AAAAAA;
  font-weight: 600;
  font-size: large;
}


.data-block {
  height: 280rpx;
  width: 95%;
  background-color: white;
  margin: 0 10rpx 30rpx 10rpx;
  box-shadow: 0px 7px 15px -7px #CCCCCC;
  border-radius: 10rpx;
}

.data-top {
  margin-top: 20rpx;

}

.data-top-number-area {
  display: inline-block;
  margin: 0 20rpx 0 20rpx;
  height: 40rpx;
  width: 35rpx;
  background-color: #CCCCCC;
  text-align: center;
}

.data-top-number {
  color: white;
}

.data-top-title {
  display: inline-block;
  font-size: larger;
  font-weight: 600;
  height: 50rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 85%;
  position: relative;
  top: 10rpx;
}

.data-middle {
  margin: 10rpx 0 0 80rpx;
  height: 95rpx;
}

.data-middle-text {
  line-height: 140%;
  width: 100%;
  /* word-wrap: normal;
  overflow: hidden; 
  text-overflow: ellipsis;  */
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-weight: 400;
}

.data-bottom {
  margin: 20rpx 0 0 80rpx;
  height: 50rpx;
}

.data-bottm-author {
  color: #CCCCCC;
  display: inline-block;
}

.data-bottom-like {
  color: #CCCCCC;
  display: inline-block;
  position: absolute;
  right: 100rpx;
  margin-top: 5rpx;
  font-size: small;
}

.load-data{
  height:50rpx;
  position:relative;
	animation:mymove 5s infinite;
}

@keyframes mymove
{
	from {left:-200rpx;}
	to {left:200rpx;}
}
